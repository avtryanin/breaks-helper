  	"tabs",
  	"activeTab",
  	"scripting",
  	"storage",
  	"alarms",
  	"notifications"
  ],
  "host_permissions": [
  	"https://remote.sdc.yandex-team.ru/operators",
	"https://ya.ru/?npr=1&utm_referrer=https%3A%2F%2Fwww.yandex.ru%2Fclck%2Fjsredir%3Ffrom%3Dyandex.ru%3Bsuggest%3Bbrowser%26text%3D"
